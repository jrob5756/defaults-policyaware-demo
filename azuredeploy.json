{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "postgresTier": {
      "type": "string",
      "defaultValue": "GeneralPurpose",
      "allowedValues": [
        "Burstable",
        "GeneralPurpose",
        "MemoryOptimized"
      ],
      "metadata": {
        "description": "PostgreSql Tier"
      }
    },
    "postgresHighAvailability": {
      "type": "string",
      "defaultValue": "Enabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "metadata": {
        "description": "PostgreSql High Availability"
      }
    },
    "containerRegistrySku": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Classic",
        "Premium",
        "Standard"
      ],
      "metadata": {
        "description": "Container Registry Sku"
      }
    },
    "containerRegistryZoneRedundancy": {
      "type": "string",
      "defaultValue": "Disabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "metadata": {
        "description": "Container Registry Zone Redundancy"
      }
    },
    "appServicePlanTier": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard",
        "Premium",
        "PremiumV2",
        "PremiumV3"
      ],
      "metadata": {
        "description": "App Service Plan Tier"
      }
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "B1",
        "B2",
        "B3",
        "D1",
        "F1",
        "I1",
        "I1v2",
        "I2",
        "I2v2",
        "I3",
        "I3v2",
        "P1V2",
        "P1V3",
        "P2V2",
        "P2V3",
        "P3V2",
        "P3V3",
        "PC2",
        "PC3",
        "PC4",
        "S1",
        "S2",
        "S3"
      ],
      "metadata": {
        "description": "App Service Plan Tier"
      }
    },
    "appServicePlanZoneRedundancy": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "App Service Plan Zone Redundancy"
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat('store', uniquestring(resourceGroup().id))]",
    "postgresName": "[concat('postgres', uniquestring(resourceGroup().id))]",
    "aspName": "[concat('asp', uniquestring(resourceGroup().id))]",
    "crName": "[concat('asp', uniquestring(resourceGroup().id))]"
  },
  "resources": [
    {
      "apiVersion": "2019-06-01",
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
      "apiVersion": "2020-02-14-preview",
      "type": "Microsoft.DBForPostgreSql/flexibleServers",
      "name": "[variables('postgresName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "tier": "[parameters('postgresTier')]",
        "name": "Standard_D4s_v3"
      },
      "properties": {
        "version": "12",
        "haEnabled": "[parameters('postgresHighAvailability')]"
      },
      "tags": {},
      "dependsOn": []
    },
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2020-11-01-preview",
      "name": "[variables('crName')]",
      "sku": {
        "name": "[parameters('containerRegistrySku')]"
      },
      "properties": {
        "zoneRedundancy": "[parameters('containerRegistryZoneRedundancy')]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-12-01",
      "name": "[variables('aspName')]",
      "location": "[resourceGroup().location]",
      "kind": "linux",
      "sku": {
        "Tier": "[parameters('appServicePlanTier')]",
        "Name": "[parameters('appServicePlanSku')]"
      },
      "properties": {
        "zoneRedundant": "[parameters('appServicePlanZoneRedundancy')]",
        "reserved": true
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}
